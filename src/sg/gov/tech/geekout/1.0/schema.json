{
  "$id": "https://schemata.openattestation.com/sg/gov/tech/geekout/1.0",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "signatory": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "position": {
          "type": "string"
        },
        "organisation": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "position",
        "organisation",
        "signature"
      ]
    },
    "recipient": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "programme": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "name",
        "startDate",
        "endDate"
      ]
    }
  },
  "required": [
    "signatory",
    "programme",
    "recipient"
  ]
}